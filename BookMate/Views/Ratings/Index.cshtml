@model IEnumerable<BookMate.Models.Rating>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RComments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books.BName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.UUserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RComments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Books.BName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.UUserName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { uid = item.UId, bid = item.BId }) |
                @Html.ActionLink("Details", "Details", new { uid = item.UId, bid = item.BId }) |
                @Html.ActionLink("Delete", "Delete", new { uid = item.UId, bid = item.BId })
            </td>
        </tr>
    }

</table>
