@model BookMate.Models.Rating

@{
    ViewBag.Title = "AddRating";
}

<h2>AddRating</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rating</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Book Name</label>
            <div class="col-md-10">
                @ViewBag.BookName
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">User Name</label>
            <div class="col-md-10">
                @ViewBag.UserName
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RRating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RRating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RComments, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RComments, new { htmlAttributes = new { @class = "form-control", type = "textarea" } })
                @Html.ValidationMessageFor(model => model.RComments, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
