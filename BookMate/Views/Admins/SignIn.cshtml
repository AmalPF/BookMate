@model BookMate.Models.Admin

@{
    ViewBag.Title = "Admin SignIn";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Admin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2 font-weight-bold">
                Username
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AUserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AUserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 font-weight-bold">
                Password
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.APassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.APassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sign In" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Click here to Sign In as User", "SignIn", "Users")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
